[init]
	defaultBranch = main
  templateDir = /Users/jluckyiv/.config/git/template
[alias]
	aa = add --all
	br = branch
	ci = commit
	cia = commit --amend --no-edit
	cim = commit -m
	co = checkout
	cob = checkout -b
	gi = "{ curl -sL https://www.toptal.com/developers/gitignore/api/ ;}; gi"
	ignore = "!gi() { curl -sL https://www.toptal.com/developers/gitignore/api/$@ ;}; gi"
	last = log -1 HEAD
	st = status
	unstage = reset HEAD --
  visual = !gitfox
[user]
	email = jack@jacksonlucky.net
	name = Jackson Lucky
  signingkey = ssh-ed25519 AAAAC3NzaC1lZDI1NTE5AAAAIGmxOdDFPYjALVPPA+jNyqttBPox/l4j9ucXzV4NUqPi
[filter "lfs"]
	required = true
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process

[url "https://jluckyiv:{{- onepasswordRead "op://Personal/Github Token Repo/credential" -}}@github.com"]
	insteadOf = https://github.com
[gpg]
	format = ssh
[gpg "ssh"]
  program = "/Applications/1Password.app/Contents/MacOS/op-ssh-sign"
[commit]
	gpgsign = true
[credential "https://github.com"]
	helper = !/opt/homebrew/bin/gh auth git-credential
[credential "https://gist.github.com"]
	helper = !/opt/homebrew/bin/gh auth git-credential

